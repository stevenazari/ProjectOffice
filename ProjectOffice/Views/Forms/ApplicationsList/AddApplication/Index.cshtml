<br />
<div class="container">
    <form class="well form-horizontal" action=" " method="post" id="Add_Application_Form">
        <fieldset>
            <!-- Form Name -->
            <legend>Add Application</legend>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Name</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="Application_Name" placeholder="Name" class="form-control" type="text">
                    </div>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Version</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="Application_Version" placeholder="0.0" class="form-control" type="text">
                    </div>
                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label">Package Type</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="Application_Package_Type_ID" class="form-control selectpicker">
                            <option value=" ">Please select</option>
                            <option value="1">Application Virtualisation (4.6+)</option>
                            <option value="4">Application Virtualisation (4.5)</option>
                            <option value="2">Software Centre Control Management</option>
                            <option value="3">Local Install</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Date Added</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input name="Application_Created" placeholder="dd/mm/yyyy" class="form-control" type="text">
                    </div>
                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label">Support Company</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="Application_Support_Company_ID" class="form-control selectpicker">
                            <option value=" ">Please select</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- radio checks -->
            <div class="form-group">
                <label class="col-md-4 control-label">Active State:</label>
                <div class="col-md-4">
                    <div class="radio">
                        <label>
                            <input type="radio" name="Application_Status" value="1" /> Active
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="Application_Status" value="0" /> Inactive
                        </label>
                    </div>
                </div>
            </div>

            <!-- Text area -->
            <div class="form-group">
                <label class="col-md-4 control-label">Application Description</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                        <textarea class="form-control" name="Application_Comment" placeholder="Brief description of the application"></textarea>
                    </div>
                </div>
            </div>

            <!-- Success message -->
            <div class="alert alert-success" role="alert" id="Application_Success_Message">Application added <i class="glyphicon glyphicon-thumbs-up"></i></div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-warning">Add Application <span class="glyphicon glyphicon-send"></span></button>
                </div>
            </div>

        </fieldset>
    </form>
</div><!-- /.container -->