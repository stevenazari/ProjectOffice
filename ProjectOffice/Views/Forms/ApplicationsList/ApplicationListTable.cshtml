@model ProjectOffice.Models.Forms.ApplicationList.ApplicationListModel

<script type="text/javascript">
    var jsonData = @Html.Raw(Json.Encode(ProjectOffice.Models.Forms.ApplicationList.ApplicationListModel.GetEnvironments()));

    var tableData = []
    var i = 0;

    for (var row in jsonData) {
        {
            tableData[i] = {
                "Server_Name": row["Server_Name"],
                "Server_Type": row["Server_Type"],
                "Application_Name": row["Application_Name"],
                "Environment_Type": row["Environment_Type"],
                "Support_Company_Name": row["Support_Company_Name"],
            }
            i++
        }
    }
</script>

