<br />
<div class="container">
    <form class="well form-horizontal" action=" " method="post" id="Add_Server_Form">
        <fieldset>
            <!-- Form Name -->
            <legend>Add Server</legend>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Server Name:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="Server_Name" placeholder="Server Name" class="form-control" type="text">
                    </div>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">IP Address:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="Server_IP_Address" placeholder="000.000.000.000" class="form-control" type="text">
                    </div>
                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label">Operating System:</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="Server_Operating_System" class="form-control selectpicker">
                            <option value=" ">Please select</option>
                            <option value="1">Windows 2003</option>
                            <option value="2">Windows 2008</option>
                            <option value="3">Windows 2012</option>
                            <option value="4">Windows 7 (For shadow PCs / lifeboats)</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label">Server Type:</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="Server_Types" class="form-control selectpicker">
                            <option value=" ">Please select</option>
                            <option>Web Server</option>
                            <option>Database Server</option>
                            <option>File Server</option>
                            <option>Backup Server</option>
                            <option>Load Balancer</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Created:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input name="Server_Created" placeholder="dd/mm/yyy" class="form-control" type="text">
                    </div>
                </div>
            </div>

            <!-- radio checks -->
            <div class="form-group">
                <label class="col-md-4 control-label">Status:</label>
                <div class="col-md-4">
                    <div class="radio">
                        <label>
                            <input type="radio" name="Server_Status" value="yes" /> Enabled
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="Server_Status" value="no" /> Disabled
                        </label>
                    </div>
                </div>
            </div>

            <!-- Text area -->
            <div class="form-group">
                <label class="col-md-4 control-label">Server Description</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                        <textarea class="form-control" name="Server_Comment" placeholder="Describe if train / test / live etc."></textarea>
                    </div>
                </div>
            </div>

            <!-- Success message -->
            <div class="alert alert-success" role="alert" id="Server_Success_Message">Added Server <i class="glyphicon glyphicon-thumbs-up"></i></div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-warning">Add Server <span class="glyphicon glyphicon-send"></span></button>
                </div>
            </div>
        </fieldset>
    </form>
</div><!-- /.container -->