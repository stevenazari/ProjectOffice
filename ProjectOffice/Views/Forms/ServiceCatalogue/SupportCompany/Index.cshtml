@model ProjectOffice.Models.Forms.ServiceCatalogue.SupportCompany.SupportCompanyModel
@{
    <br />
        <form role="form" data-toggle="validator" method="post" action="/SupportCompany/save" id="Add_Support_Company_Form">
            <fieldset>
                <!-- Form Name -->
                <!--<legend>Add Support Company</legend>-->

                <!-- Text input-->
                <div class="form-group has-feedback">
                    
                    <label for="Name" class="col-md-4 control-label">@Html.LabelFor(m => m.Name, "Name:")</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.TextBoxFor(m => m.Name, new { placeholder = "Company Name", @class = "form-control", required = "required" })
                        </div>
                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                    </div>
                    <label class="help-block with-errors">*@Html.ValidationMessageFor(m => m.Name)</label>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label for="Address_1" class="col-md-4 control-label">@Html.LabelFor(m => m.Address_1, "Address 1:")</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                            @Html.TextBoxFor(m => m.Address_1, new { placeholder = "1 Street Name", @class = "form-control" })
                        </div>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label for="Address_2" class="col-md-4 control-label">@Html.LabelFor(m => m.Address_2, "Address 2:")</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                            @Html.TextBoxFor(m => m.Address_2, new { placeholder = "Town/City", @class = "form-control" })
                        </div>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label for="Post_Code" class="col-md-4 control-label">@Html.LabelFor(m => m.Post_Code, "Post Code:")</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                            @Html.TextBoxFor(m => m.Post_Code, new { placeholder = "Post Code", @class = "form-control" })
                        </div>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">@Html.LabelFor(m => m.Tel, "Tel:")</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                            @Html.TextBoxFor(m => m.Tel, new { placeholder = "00000 000000", @class = "form-control" })
                        </div>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group has-feedback">
                    <label for="Email" class="col-md-4 control-label">@Html.LabelFor(m => m.Email, "Email:")</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email@Address.com", @class = "form-control", type = "email", required = "required" })
                        </div>
                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                    </div>
                    <label class="help-block with-errors">*@Html.ValidationMessageFor(m => m.Email)</label>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label for="Website" class="col-md-4 control-label">@Html.LabelFor(m => m.Website, "Website:")</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
                            @Html.TextBoxFor(m => m.Website, new { placeholder = "Website or domain name", @class = "form-control" })
                        </div>
                    </div>
                </div>
 
                <!-- radio checks -->
                <div class="form-group has-feedback">
                    <label for="Out_Of_Hours" class="col-md-4 control-label">@Html.LabelFor(m => m.Out_Of_Hours, "Support Contract:")</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="radio">
                            <label>
                                @Html.RadioButtonFor(m => m.Out_Of_Hours, true, new { required = "required" }) Yes
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                @Html.RadioButtonFor(m => m.Out_Of_Hours, true, new { required = "required" }) No
                            </label>
                        </div>
                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                    </div>
                    <label class="help-block with-errors">*@Html.ValidationMessageFor(m => m.Out_Of_Hours)</label>
                </div>

               <!-- Text area -->
                <div class="form-group has-feedback">
                    <label class="col-md-4 control-label">@Html.LabelFor(m => m.Comment, "Company Notes:")</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            @Html.TextAreaFor(m => m.Comment, new { placeholder = "Description", @class = "form-control", required = "required" })
                        </div>
                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                    </div>
                    <label class="help-block with-errors">*@Html.ValidationMessageFor(m => m.Comment) </label>
                </div>

                <!-- Success message -->
                <div class="alert alert-success collapse" role="alert" id="Support_Company_Success_Message">
                    <i class="glyphicon glyphicon-thumbs-up"></i> Added Support Company 
                </div>

                <!-- Error message -->
                <div class="alert alert-danger collapse" role="alert" id="Support_Company_Error_Message">
                    <i class="glyphicon glyphicon-thumbs-down"></i> Unable to add support company - 
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-warning" id="#Support_Company_Submit">Add Support Company <span class="glyphicon glyphicon-send"></span></button>
                    </div>
                </div>
            </fieldset>
        </form>
    @Scripts.Render("~/bundles/SupportCompany")
}